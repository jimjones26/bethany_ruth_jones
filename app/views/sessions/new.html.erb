<% provide(:title, "Sign in") %>
<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
			<div class="sign-form">
				<div class="sign-inner">
					<h3 class="first-child">Sign In To Your Account</h3>
					<hr>
					<%= form_for :session, url: sessions_path,  html: { role: "form" } do |f| %>
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-user"></i></span>
						<%= f.text_field :email, :class => "form-control", :placeholder => "Enter your email address", :autofocus => true %>
					</div>
					<br>
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-lock"></i></span>
						<%= f.password_field :password, :class => "form-control", :placeholder => "Enter your password" %>
					</div>
					<div class="checkbox">
						<label>
							<%= check_box_tag :remember_me, 1, params[:remember_me] %> Remember me
						</label>
					</div>
					<%= f.submit "Sign in", class: "btn btn-blue" %>
					<hr>
					<% end %>
					<p>Not registered? <%= link_to "Create an Account.", signup_path %></p>
					<div class="pwd-lost">
						<div class="pwd-lost-q show">Lost your password?  <%= link_to "Click here to recover.", new_password_reset_path %></div>
					</div>
				</div>
			</div>
		</div>
	</div>    
</div>