<% provide(:title, 'Edit user') %>
<%= render 'layouts/topic_header' %>
<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
			<div class="sign-form">
				<div class="sign-inner">
					<h3 class="first-child">Edit Account Details</h3>
					<hr>
					<%= form_for @user, html: { role: "form" } do |f| %>
					<%= render 'shared/error_messages' %>
					<div class="form-group">
						<%= f.text_field :first_name, :class => "form-control", :placeholder => "Your First Name", :autofocus => true %>
					</div>
					<div class="form-group">
						<%= f.text_field :last_name, :class => "form-control", :placeholder => "Your Last Name" %>
					</div>
					<div class="form-group">
						<%= f.text_field :email, :class => "form-control", :placeholder => "Email Address" %>
					</div>
					<div class="form-group">
						<%= f.password_field :password, :class => "form-control", :placeholder => "Password" %>
					</div>
					<div class="form-group">
						<%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Confirm Password" %>
					</div>
					<%= f.submit "Save changes", class: "btn btn-blue" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>