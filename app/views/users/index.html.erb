<% provide(:title, 'All users') %>
<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<table class="table">
				<thead>
					<tr>
						<th>User ID</th>
						<th>First Name</th>
						<th>Last Name</th>
						<th>Email</th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td><%= user.id %></td>
						<td><%= link_to user.first_name, user %></td>
						<td><%= user.last_name %></td>
						<td><%= user.email %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>