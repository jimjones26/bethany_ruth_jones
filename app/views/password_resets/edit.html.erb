<% provide(:title, "Reset Password") %>
<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
			<div class="sign-form">
				<div class="sign-inner">
					<h3 class="first-child">Reset Your Account Password</h3>
					<hr>
					<%= form_for @user, :url => password_reset_path(params[:id]), html: { role: "form" } do |f| %>
					<%= render 'shared/error_messages' %>
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-lock"></i></span>
						<%= f.password_field :password, :class => "form-control", :placeholder => "Enter your new password", :autofocus => true %>
					</div>
					<br>
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-lock"></i></span>
						<%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Confirm new password", :autofocus => true %>
					</div>
					<br>
					<%= f.submit "Update Password", class: "btn btn-blue" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>    
</div>